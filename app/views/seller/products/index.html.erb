<h1>Seus produtos cadastrados</h1>

<%= flash[:notice] %>	<br>

<% if @stores.empty? %>
    <b>Nao existem produtos cadastrados</b>
<% else %>
    <% @stores.each do |s| %>
        <% @products = Product.where(store_id: s.id) %>
        <% @products.each do |p| %>
            <div><%= link_to p.nome, edit_seller_product_path(p) %></div>
        <% end %>
    <% end %>
<% end %>

<br>

