<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="../../css/estilo.css">
    <title>Cadastro de produto</title>
</head>

<h1>Cadastro de produto</h1>

<%= form_for [:seller, @product] do |f| %>

    <%= flash[:notice] %>

	<br>

    <%= f.label "Nome" %>
    <%= f.text_field :nome, required: true %>

    <br>

    <%= f.label "Codigo" %>
    <%= f.text_field :codigo, required: true %>

    <br>

    <%= f.label "Descricao" %>
    <%= f.text_field :descricao, required: true %>

    <br>

    <%= f.label "Preço normal" %>
    <%= f.text_field :preconormal, required: true %>

    <br>

    <%= f.label "Preço promocional" %>
    <%= f.text_field :precopromocional, required: true %>

    <br>

    <%= f.label "Estoque atual" %>
    <%= f.text_field :estoqueatual, required: true %>

    <br>

    <%= f.label "Estoque maximo" %>
    <%= f.text_field :estoquemax, required: true %>

    <br>

    <%= f.label "Loja" %>
    <% if @stores.empty? %>
        E necessario ter uma loja cadastrada
    <% else %>
        <%= f.select :store_id, @stores.collect { |store| [store.nome, store.id]}, required: true %>
    <% end %>

    <br>

    <%= f.submit "Cadastrar" %>
<% end %>

<br>

<%= link_to "Voltar para página inicial", home_index_path %>