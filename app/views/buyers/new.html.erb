<h1>Cadastro de usuario</h1>

<%= form_for @buyer, :action => :new, :method => :post, :html => {class:""} do |f| %>

    <%= flash[:notice] %>

	<br>

    <%= f.label "Nome" %>
    <%= f.text_field :nome, required: true %>

    <%= f.label "Email" %>
    <%= f.text_field :email, required: true %>

    <%= f.label "CPF" %>
    <%= f.text_field :cpf, required: true %>

    <%= f.label "CNPJ (se for pessoa jurídica)" %>
    <%= f.text_field :cnpj %>

    <%= f.label "Endereço" %>
    <%= f.text_field :endereco, required: true %>
            
    <%= f.label "Número" %>
    <%= f.text_field :numero, required: true %>
            
    <%= f.label "Complemento" %>
    <%= f.text_field :complemento %>

    <%= f.label "CEP" %>
    <%= f.text_field :cep, required: true %>
            
    <%= f.label "Bairro" %>
    <%= f.text_field :bairro, required: true %>
            
    <%= f.label "Cidade" %>
    <%= f.text_field :cidade, required: true %>
            
    <%= f.label "Estado" %>
    <%= f.text_field :uf, required: true %>

    <%= f.label "Telefone residencial" %>
    <%= f.text_field :telresidencial %>

    <%= f.label "Telefone comercial" %>
    <%= f.text_field :telcomercial %>

    <%= f.label "Telefone celular" %>
    <%= f.text_field :celular %>

    <%= f.label "Senha" %>
    <%= f.password_field :password, required: true %>
    <%= f.label "Confirme sua senha" %>
    <%= f.password_field :password_confirmation, required: true %>

    <%= f.submit "Cadastrar" %>
<% end %>

<br>

<%= link_to "Voltar para página inicial", home_index_path %>