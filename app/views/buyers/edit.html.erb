<h1>Cadastro de usuario</h1>

<%= form_for @buyer, :html => {class:""} do |f| %>

    <%= flash[:notice] %>

	<br>

    <%= f.label "Nome" %>
    <%= f.text_field :nome %>

    <%= f.label "Email" %>
    <%= f.text_field :email %>

    <%= f.label "CPF" %>
    <%= f.text_field :cpf %>

    <%= f.label "CNPJ (se for pessoa jurídica)" %>
    <%= f.text_field :cnpj %>

    <%= f.label "Endereço" %>
    <%= f.text_field :endereco %>
            
    <%= f.label "Número" %>
    <%= f.text_field :numero %>
            
    <%= f.label "Complemento" %>
    <%= f.text_field :complemento %>

    <%= f.label "CEP" %>
    <%= f.text_field :cep %>
            
    <%= f.label "Bairro" %>
    <%= f.text_field :bairro %>
            
    <%= f.label "Cidade" %>
    <%= f.text_field :cidade %>
            
    <%= f.label "Estado" %>
    <%= f.text_field :uf %>

    <%= f.label "Telefone residencial" %>
    <%= f.text_field :telresidencial %>

    <%= f.label "Telefone comercial" %>
    <%= f.text_field :telcomercial %>

    <%= f.label "Telefone celular" %>
    <%= f.text_field :celular %>

    <%= f.label "Senha" %>
    <%= f.password_field :password %>
    <%= f.label "Confirme sua senha" %>
    <%= f.password_field :password_confirmation %>

    <%= f.submit "Atualizar" %>
<% end %>