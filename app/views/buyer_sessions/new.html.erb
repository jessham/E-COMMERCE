<h1>E-COMMERCE - Login - Comprador</h1>

<%= form_tag '/buyerlogin', :html => {} do %>
      				
    <%= flash[:notice] %>

	<br>
      			
	<%= text_field_tag :email, nil, :placeholder => "Email" %>
	      			
	<%= password_field_tag :password, nil, :placeholder => "Senha" %>
	      			
	<%= submit_tag "Login" %>
    
<% end %>